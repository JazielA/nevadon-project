---
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const currentPath = Astro.url.pathname;
const nextLang = lang === 'es' ? 'en' : 'es';

// Función para cambiar la URL al otro idioma
function getLocalizedPath(targetLang: string) {
  if (targetLang === 'es') {
    // Si vamos a español, estamos en /en/..., remover el /en
    return currentPath.replace(/^\/en/, '') || '/';
  } else {
    // Si vamos a inglés, estamos en /..., agregar /en
    return currentPath === '/' ? '/en/' : `/en${currentPath}`;
  }
}

const href = getLocalizedPath(nextLang);
const label = lang.toUpperCase(); 
---

<a 
  href={href}
  class="flex flex-col items-center justify-center p-1 rounded-lg text-gray-600 hover:text-[#2C5E38] hover:bg-gray-50 transition-all duration-200 group"
  aria-label={`Cambiar idioma a ${nextLang === 'es' ? 'Español' : 'English'}`}
>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 group-hover:scale-110 transition-transform">
    <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S12 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S12 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
  </svg>
  <span class="text-[10px] font-bold leading-none mt-0.5">{label}</span>
</a>
