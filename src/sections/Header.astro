---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguagePicker from '../components/LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="w-full bg-[#F5F5F0] shadow-sm fixed top-0 z-50">
  <div class="container mx-auto px-4 h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href={lang === 'es' ? '/' : '/en/'} class="flex items-center gap-2">
      <span class="text-2xl font-serif font-bold text-green-900">NEVADON</span>
      <span class="text-xs text-gray-500 tracking-widest mt-1 border-l border-gray-400 pl-2 uppercase">Export Fresh Fruit</span>
    </a>

    <!-- Navigation -->
    <nav class="hidden md:flex items-center gap-8 ml-auto mr-8">
      <a href="#productos" class="text-gray-600 hover:text-green-800 transition-colors font-medium">{t('nav.products')}</a>
      <a href="#nosotros" class="text-gray-600 hover:text-green-800 transition-colors font-medium">{t('nav.about')}</a>
      
      
    </nav>

    <!-- Language Picker -->
    <div class="hidden md:block mr-4">
      <LanguagePicker />
    </div>

    <!-- CTA Button -->
    <a href="#contacto" class="hidden md:block bg-[#2C5E38] text-white px-6 py-2 rounded-full hover:bg-green-900 transition-colors font-medium">
      {t('nav.contact')}
    </a>

    <!-- Mobile Menu Button -->
    <button class="md:hidden text-gray-600">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
  </div>
</header>