---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="bg-[#1a3c25] text-white py-8 border-t border-white/10">
  <div class="container mx-auto px-4 flex flex-col md:flex-row items-center justify-between gap-4">
    <div class="text-sm text-gray-400">
      &copy; {currentYear} {t('footer.copyright')}
    </div>
    <div class="flex gap-6 text-sm font-medium">
      <a href="#" class="hover:text-yellow-400 transition-colors">{t('footer.privacy')}</a>
      <a href="#" class="hover:text-yellow-400 transition-colors">{t('footer.terms')}</a>
    </div>
  </div>
</footer>