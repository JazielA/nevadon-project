---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="nosotros" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      
      <!-- MisiÃ³n Card -->
      <div class="bg-[#F5F5F0] rounded-3xl p-10 md:p-12">
        <div class="w-14 h-14 bg-[#2C5E38] rounded-xl flex items-center justify-center mb-8">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
          </svg>
        </div>
        
        <h3 class="text-3xl font-serif font-bold text-[#1a3c25] mb-6">
          {t('mission.title')}
        </h3>
        
        <div class="space-y-6 text-gray-600 leading-relaxed text-justify">
          <p>
            {t('mission.content')}
          </p>
          
        </div>
      </div>

      <!-- Objetivo Card -->
      <div class="bg-[#2C5E38] rounded-3xl p-10 md:p-12 text-white">
        <div class="w-14 h-14 bg-[#F5F5F0] rounded-xl flex items-center justify-center mb-8">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2C5E38" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.042 21.672L13.684 16.6m0 0l-2.51 2.225.569-9.47 5.227 7.917-3.286-.672zM12 2.25V4.5m5.834.166l-1.591 1.591M20.25 10.5H18M7.757 14.743l-1.59 1.59M6 10.5H3.75m4.007-4.243l-1.59-1.59" />
          </svg>
        </div>

        <h3 class="text-3xl font-serif font-bold mb-6">
          {t('objective.title')}
        </h3>

        <div class="space-y-6 text-gray-200 leading-relaxed text-justify">
          <p>
            {t('objective.content')}
          </p>
          
        </div>
      </div>

    </div>
  </div>
</section>
