<section id="contacto" class="py-20 bg-[#F5F5F0]">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row gap-8 max-w-6xl mx-auto">
      
      <!-- Contact Info Card (Left) -->
      <div class="w-full lg:w-1/2 bg-[#2C5E38] rounded-3xl p-8 md:p-10 text-white flex flex-col justify-between h-full min-h-[500px]">
        <div>
          <h3 class="text-2xl font-serif font-bold mb-8">Información de Contacto</h3>
          
          <div class="space-y-6">
            <!-- Address -->
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-yellow-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-300 mb-1">Dirección</p>
                <p class="font-medium">Chile, Región Central</p>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-yellow-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-300 mb-1">Teléfono</p>
                <p class="font-medium">+56 XX XXX XXXX</p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-yellow-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-300 mb-1">Email</p>
                <p class="font-medium">contacto@nevadon.cl</p>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-12">
          <div class="h-px w-full bg-white/20 mb-8"></div>
          <p class="text-sm text-gray-300 mb-4">Exportamos a más de 20 países en todo el mundo</p>
          <div class="flex flex-wrap gap-3 text-sm font-bold text-[#2C5E38]">
             <!-- Country Codes as simple text or badges? Image shows text. -->
             <span class="text-white/60 tracking-widest">US CN EU JP KR SA BR MX</span>
          </div>
        </div>
      </div>

      <!-- Contact Form Card (Right) -->
      <div class="w-full lg:w-1/2 bg-white rounded-3xl p-8 md:p-10 shadow-sm flex flex-col justify-center">
        <h3 class="text-2xl font-serif font-bold text-[#1a3c25] mb-8">Envíanos un Mensaje</h3>
        
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label for="nombre" class="text-sm font-medium text-gray-700">Nombre</label>
              <input 
                type="text" 
                id="nombre" 
                placeholder="Tu nombre"
                class="w-full bg-[#F5F5F0] border-none rounded-lg px-4 py-3 text-gray-800 placeholder-gray-500 focus:ring-2 focus:ring-[#2C5E38] focus:outline-none transition-all"
              />
            </div>
            <div class="space-y-2">
              <label for="email" class="text-sm font-medium text-gray-700">Email</label>
              <input 
                type="email" 
                id="email" 
                placeholder="tu@email.com"
                class="w-full bg-[#F5F5F0] border-none rounded-lg px-4 py-3 text-gray-800 placeholder-gray-500 focus:ring-2 focus:ring-[#2C5E38] focus:outline-none transition-all"
              />
            </div>
          </div>

          <div class="space-y-2">
            <label for="empresa" class="text-sm font-medium text-gray-700">Empresa</label>
            <input 
              type="text" 
              id="empresa" 
              placeholder="Nombre de tu empresa"
              class="w-full bg-[#F5F5F0] border-none rounded-lg px-4 py-3 text-gray-800 placeholder-gray-500 focus:ring-2 focus:ring-[#2C5E38] focus:outline-none transition-all"
            />
          </div>

          <div class="space-y-2">
            <label for="mensaje" class="text-sm font-medium text-gray-700">Mensaje</label>
            <textarea 
              id="mensaje" 
              rows="4" 
              placeholder="¿Cómo podemos ayudarte?"
              class="w-full bg-[#F5F5F0] border-none rounded-lg px-4 py-3 text-gray-800 placeholder-gray-500 focus:ring-2 focus:ring-[#2C5E38] focus:outline-none transition-all resize-none"
            ></textarea>
          </div>

          <button 
            type="submit" 
            class="w-full bg-[#2C5E38] text-white font-bold py-4 rounded-lg hover:bg-[#1a3c25] transition-colors flex items-center justify-center gap-2 mt-4"
          >
            Enviar Mensaje
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
            </svg>
          </button>
        </form>
      </div>

    </div>
  </div>
</section>
